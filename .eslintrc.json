{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true
    },
    "globals": {
        "it": true,
        "describe": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ]
    }
}
